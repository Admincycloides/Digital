<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/redOverlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/overlay_red"/>

    <ImageView
        android:id="@+id/yellowOverlay"
        android:layout_toEndOf="@+id/redOverlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/overlay_yellow"/>

    <ImageView
        android:id="@+id/greenOverlay"
        android:layout_toEndOf="@+id/yellowOverlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/overlay_green"/>

    <ImageView
        android:id="@+id/clearOverlay"
        android:layout_toEndOf="@+id/greenOverlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/overlay_clear"/>
</RelativeLayout>